		<div id="fullpage">
			<section class="section" id="section0">
				<div class="container-fluid">
					<div class="row">
						<div class="col-12">
							<div id="header">
								<a href="/">
									<img src="/public/files/images/COO_03_Registrierung_Logo.png" class="header-logo" title="Logo Coop3000" />
								</a>	
							</div>
							
							<div class="container">
								<div class="row">
									<div class="col-lg-8 col-lg-offset-2">
										<div class="content">
											<h1>
												ADMIN BEREICH!
											</h1>
											<p>
												<div class="col-lg-6 col-lg-offset-3 text-center">
													<form action="/updateProfile" method="POST" id="reg-form">
														<div class="form-group">
															<label for="name">Nick/Name</label>
															<input type="text" class="form-control" name="username" id="username" value=<%=username%> data-minlength="1" pattern="^[A-Za-z0-9_.]+$" title="Bitte gib Deinen Namen ein mit dem Dich der COOP3000 anreden darf. Keine Sonderzeichen. Nur Buchstaben und Zahlen." required>
														</div>

														<div class="form-group">
															<label for="email">E-Mail-Adresse</label>
															<input type="email" class="form-control" name="email" id="email" value=<%= email %> title="Deine richtige E-Mail Adresse wäre hier nicht schlecht. z.B.: mustermann@web.de" required>
														</div>

														<div class="form-group">
															<label for="mobile">Mobilnummer</label>
															<input type="text" class="form-control" name="mobile" id="mobile" pattern="^[0-9_.]+$" title="Deine echte Mobilfunknummer wäre hier super. z.B.: 00490123456789" value=<%= mobile %>>
														</div>

														<div class="form-group">
															<label for="town">Ort</label>
															<input type="text" class="form-control" name="town" id="town" value=<%= town %>>
														</div>

														<div class="form-group">
															<label for="coopid">CoopId</label>
															<input type="text" class="form-control" name="coopid" id="coopid" disabled="disabled" value=<%= coopid %>>
														</div>
														<hr>
														<h1>
															STUFE 1 / DAS FÜLLHORN
														</h1>
														<h2>
															EINEN BALL MACHEN
														</h2>
														<br>
														COMMUNITIES KNÜPFEN
														<input type="checkbox" name="verknExtended" id="verknExtended" <%= verknExtended %> ><br>
														ALTERSVORSORGE (TEMPORÄR)
														<input type="checkbox" name="altersvorsorge" id="altersvorsorge" <%= altersvorsorge %> ><br>
														SOZIALAKADEMIE
														<input type="checkbox" name="sozialakademie" id="sozialakademie" <%= sozialakademie %> ><br>
														KNAPPENBAR
														<input type="checkbox" name="knappenbar" id="knappenbar" <%= knappenbar %> ><br>
														GEMÜSEFONDS
														<input type="checkbox" name="gemuesefond" id="gemuesefond" <%= gemuesefond %> ><br>
														GLÜCKLICHE TAGE
														<input type="checkbox" name="gluecklichtage" id="gluecklichtage" <%= gluecklichtage %> ><br>
														PAYBACK-PELE
														<input type="checkbox" name="paybackpele" id="paybackpele" <%= paybackpele %> ><br>
														<h2>
															TÄNZE 3000
														</h2>
														<br>
														LANGSAMER WALZER
														<input type="checkbox" name="walzer" id="walzer" <%= walzer %> ><br>
														DISKOFOX
														<input type="checkbox" name="diskofox" id="diskofox" <%= diskofox %> ><br>
														CHA CHA CHA
														<input type="checkbox" name="chachacha" id="chachacha" <%= chachacha %> ><br>
														WIENER WALZER
														<input type="checkbox" name="wienerwalzer" id="wienerwalzer" <%= wienerwalzer %> ><br>
														SWING
														<input type="checkbox" name="swing" id="swing" <%= swing %> ><br>
														RUMBA
														<input type="checkbox" name="rumba" id="rumba" <%= rumba %> ><br>
														FOXTROTT
														<input type="checkbox" name="foxtrott" id="foxtrott" <%= foxtrott %> ><br>
														BLUES
														<input type="checkbox" name="blues" id="blues" <%= blues %> ><br>
														<hr>
														<h1>
															STUFE 2 / DIE SUPPERTHEORIEPARTIES
														</h1>
														<% if(events!= undefined && events.length>0){%>
															<input type="hidden" name="eventnumber" value=<%= events.length %>>
															<h2>
																DAS GELÄNDE SONDIEREN
															</h2>
															<br>
															<% for(var i=0; i<events.length; i++) {%>
																<% if(i===4){break;}%>
																<% var checked = '';%>
																<%= events[i].name %>
																<% if(events[i].participants!= undefined && events[i].participants.length>0){
																	//console.log("participants: ", events[i].participants);
																	for(var j = 0; j < events[i].participants.length; j++) {
																		//console.log("matching? ", events[i].participants[j].id.toString() + " : " + id);
																		if(events[i].participants[j].id == id) {
																			//console.log("gefunden!");
																			checked = 'checked';
																		}
																	}
																} %>
																<input type="checkbox" name="event<%= i %>" id="event<%= i %>" <%= checked %>>
																<input type="hidden" name="eventID<%= i %>" value=<%= events[i]._id %>>
																<br>
															<% } %>
															<h2>
																DER CONCERN HANDELT
															</h2>
															<br>
															<% if(events!= undefined && events.length>4){%>
																<% for(var i=4; i<events.length; i++) {%>
																	<% var checked2 = '';%>
																	<%= events[i].name %>
																	<% if(events[i].participants!= undefined && events[i].participants.length>0){
																		for(var j = 0; j < events[i].participants.length; j++) {
																			if(events[i].participants[j].id == id) {
																				checked2 = 'checked';
																			}
																		}
																	} %>
																	<input type="checkbox" name="event<%= i %>" id="event<%= i %>" <%= checked2 %>>
																	<input type="hidden" name="eventID<%= i %>" value=<%= events[i]._id %>>
																	<br>
																<% } %>
															<% }else{ %>
																Es gibt noch keine Concern Handlungen.
															<% } %>
														<% }else{%>
															Es gibt noch keine Events
														<% } %>
														<input type="hidden" name="id" value=<%= id %>>
														<input type="hidden" name="idhelper" value=<%= coopid %>>
														<br>
														<button class="buttonHover">Ändern</button>
													</form>
												</div>
											</p>
										</div>
									</div>							
								</div>
							</div>
						</div>
