		</div>

		<nav id="main-nav">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div id="header">
							<a href="/">
								<img src="/public/files/images/COO_MENU_Logo.jpg" class="header-logo" title="Logo Coop3000" />
							</a>
						</div>
						<div class="content">
							<nav>
								<% include ../elements/navigation %>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</nav>

		<div id="fullpage">
			<section class="section" id="section0">
				<div class="container-fluid">
					<div class="row">
						<div>
							<div id="header">
								<a href="/">
									<img src="/public/files/images/COO_Bildungswerke_Logo.png" class="header-logo" title="Logo Coop3000" />
								</a>
							</div>

							<div class="container">
								<div class="row">
									<div class="col-lg-8 col-lg-offset-2">
										<div class="content">
											<h1>
												Abstimmung!
											</h1>
											<p>
												 Text hier<br />
												 Erstelle eine Abstimmung
											</p>
										</div>
									</div>
									<div class="col-lg-6 col-lg-offset-3 text-center">
										<div class="message">
											<%= message %>
										</div>
										<form action="/createVote" method="POST" id="reg-form" enctype="application/json" data-toggle="validator" role="form">
											<div class="form-group">
												<label for="title">Titel</label>
										    	<input type="text" class="form-control" name="title" id="title" placeholder="Wie soll der Titel deiner Abstimmung sein?" data-minlength="1" title="Bitte gib einen Titel für Deine Abstimmung ein." required>
												  <div class="help-block with-errors"></div>
											</div>

											<div class="form-group">
												<label for="content">Inhalt</label>
												<textarea class="form-control" name="content" placeholder="Hier Dein Text für die Abstimmung..." id="content" rows="10" cols="70" maxlength="3000"></textarea>
												<div class="help-block with-errors"></div>
											</div>

									    <div class="form-group">
									      <label for="enddate">Enddatum</label>
									      <input type="date" class="form-control" name="enddate" id="enddate" min="2017-02-19" max="2019-12-31" required>
											  <div class="help-block with-errors"></div>
										  </div>

											<input type="hidden" name="name" value="">
											<button class="buttonHover" onclick="FillName(this.form)">Erstellen</button>
										</form>
									</div>							
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	    
