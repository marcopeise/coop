<div id="fullpage">
    <section class="section" id="section0">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div id="header">
                        <a href="/">
                            <img src="/public/files/images/COO_03_Registrierung_Logo.png" class="header-logo" title="Logo Coop3000" />
                        </a>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2">
                                <div class="content">
                                    <h1>
                                        ADMIN Bereich - Events
                                    </h1>
                                    <a href="/admin"> ZURÜCK ZUM ADMINMENUE</a>
                                    <div class="message">
                                        <%= updatemessage %>
                                    </div>
                                    <p>
                                        <div class="col-lg-6 col-lg-offset-3 text-center">
                                            <br>
                                            Erstelle ein neues Event für ALLE Teilnehmer.
                                            <br>
                                            <form action="/createevent" method="POST" id="reg-form" enctype="application/json">
                                                <div class="form-group">
                                                    <label for="eventname">Event Name</label>
                                                    <input type="text" class="form-control" name="eventname" id="eventname" title="Bitte gib den Namen des Events ein den Du erstellen möchtest.">
                                                </div>
                                                <button class="buttonHover">EVENT ERSTELLEN</button>
                                            </form>
                                        </div>
                                    </p>

                                    <% if(events!= undefined && events.length>0){%>
                                        <div class="col-lg-12 col-lg-offset-0">
                                            <br>
                                            <h2>Es existieren folgende Events:</h2>
                                            <br>
                                            <h3>
                                                DAS GELÄNDE SONDIEREN
                                            </h3>
                                            <% for(var i=0; i<events.length; i++) {%>
                                                <% if(i===4){break;}%>
                                                <div class="col-lg-8 col-lg-offset-2">
                                                    <%= events[i].name %>
                                                    &nbsp;
                                                    <a href="/editevent/<%= events[i]._id %>"> editieren</a>
                                                    &nbsp;|&nbsp;
                                                    <a href="/deleteevent/<%= events[i]._id %>"> löschen </a>
                                                    <br>
                                                 </div>
                                            <% } %>
                                        </div>
                                        <div class="col-lg-12 col-lg-offset-0">
                                        <h3>
                                            DER CONCERN HANDELT
                                        </h3>
                                        <br>
                                        <% if(events!= undefined && events.length>4){%>
                                            <% for(var i=4; i<events.length; i++) {%>
                                                <%= events[i].name %>
                                                &nbsp;
                                                <a href="/editevent/<%= events[i]._id %>"> editieren</a>
                                                &nbsp;|&nbsp;
                                                <a href="/deleteevent/<%= events[i]._id %>"> löschen </a>
                                                <br>
                                            <% } %>
                                        <% }else{ %>
                                            Es gibt noch keine Concern Handlungen.
                                        <% } %>
                                        </div>
                                    <% }else{%>
                                        <div class="col-lg-8 col-lg-offset-2">
                                            <br>
                                            Es gibt noch keine Events
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
