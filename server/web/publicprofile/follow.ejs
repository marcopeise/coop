	<body id="registrierung">
		
		<div id="nav-icon">
			<span></span>
			<span></span>
			<span></span>
			<span></span>
		</div>
		
		<nav id="main-nav">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div id="header">
							<a href="/">
								<img src="/public/files/images/COO_MENU_Logo.jpg" class="header-logo" title="Logo Coop3000" />
							</a>								
						</div>
						<div class="content">
							<nav>
								<% include ../elements/navigation %>
							</nav>
						</div>						
