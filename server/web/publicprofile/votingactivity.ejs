	<div id="fullpage">
		<section class="section" id="section0">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div id="header">
							<a href="/">
								<img src="/public/files/images/COO_03_Registrierung_Logo.png" class="header-logo" title="Logo Coop3000" />
							</a>
						</div>

						<div class="container">
							<div class="row">
								<div class="col-lg-8 col-lg-offset-2">
									<div class="content">
											<h1>
												Profil
											</h1>

											<ul class="subnav">
												<li><a href="/profile/<%=user._id%>">Profil</a></li>
												<li><a href="/coops/<%=user._id%>">COOPS</a></li>
												<li><a href="/following/<%=user._id%>">Anhängen</a></li>
												<li><span>VORSCHLAGSAKTIVITÄT</span></li>
												<li><a href="">SUCHEN</a></li>
											</ul>

											<p>
												Hier kannst Du alle Aktivitäten von <%=user.username%> aus den Vorschlägen sehen.
											</p>
											<div class="col-lg-12 col-lg-offset-0 text-center">
												<h3>
													Erstellte Vorschläge von <%=user.username%>
												</h3>
											</div>
											<% if(userIsOwnerList.length>0){%>
												<br>
												<% for(var i=0; i<userIsOwnerList.length; i++) {%>
													<div class="col-lg-12 col-lg-offset-0 text-center">
														<div class="form-group">
															<label for="title">Titel: </label><a href=""><%= userIsOwnerList[i].title %></a>
															<br>
													</div>
												<% } %>
											<% }else{%>
												Es gibt noch keine Vorschläge von <%=user.username%>.
												<br>
											<% } %>
											<hr>
											<div class="col-lg-12 col-lg-offset-0 text-center">
												<h3>
													Vorschläge, bei den <%=user.username%> abgestimmt hat.
												</h3>
											</div>
											<% if(userIsVotingList.length>0){%>
												<% for(var k=0; k<userIsVotingList.length; k++) {%>
													<div class="col-lg-12 col-lg-offset-0 text-center">
														<div class="form-group">
															<label for="title">Titel: </label><a href=""><%= userIsVotingList[k].title %> </a>
															<label for="title">Abgestimmt mit: </label>
															<%= userIsVotingList[k].voting%>
														</div>
														<br>
													</div>
												<% } %>
											<% }else{%>
												Es gibt noch keine Vorschläge von <%=user.username%> bei dem sie/er abgestimmt hat.
												<br>
											<% } %>
											&nbsp;<hr>
											<div class="col-lg-12 col-lg-offset-0 text-center">
												<h3>
													Vorschläge, bei den <%=user.username%> einen Kommentar hinterlegt hat.
												</h3>
											</div>
											<% if(userIsVotingList.length>0){%>
												<% for(var l=0; l<userIsCommentingList.length; l++) {%>
												<div class="col-lg-12 col-lg-offset-0 text-center">
													<div class="form-group">
														<label for="title">Titel: </label><a href=""><%= userIsCommentingList[l].title %> </a>
														<% for(var m=0; m<userIsCommentingList[l].commentList.length; m++) {%>
															<label for="title">Kommentar: </label>
															<%= userIsCommentingList[l].commentList[m].comment%>
															<br>
														<% } %>
													</div>
													<br>
												</div>
												<% } %>
											<% }else{%>
												Es gibt noch keine Vorschläge, die <%=user.username%> kommentiert hat.
												<br>
											<% } %>
										</div>
									</div>							
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
