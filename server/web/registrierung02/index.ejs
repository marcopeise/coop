		<div id="fullpage">
			<section class="section" id="section0">
				<div class="container-fluid">
					<div class="row">
						<div class="col-12">
							<div id="header">
								<a href="/">
									<img src="/public/files/images/COO_03_Registrierung_Logo.png" class="header-logo" title="Logo Coop3000" />
								</a>	
							</div>
							
							<div class="container">
								<div class="row">
									<div class="col-lg-10 col-lg-offset-1">
										<div class="content">
											<h1>
												GLÜCKWUNSCH!
											</h1>
											<p>
												 Du kannst einen Anteil am neuen Concern auf Dich eintragen lassen!<br />
												 Ab dann wirst Du alles bekommen, was der Concern hat. Kannst Du alles erfahren, was der Concern weiß.
											</p>
										</div>
									</div>
									<div class="col-lg-6 col-lg-offset-3 text-center">
										<div class="message">
											<%= message %>
										</div>
										<form action="/register" method="POST" id="reg-form" enctype="application/json" data-toggle="validator" role="form">
											<div class="form-group">
												<label for="username">Nick/Name</label>
										    	<input type="text" class="form-control" name="username" id="username" placeholder="Auf welchen Namen soll Dein Anteil eingetragen werden?" data-minlength="1" pattern="^[A-Za-z0-9_.]+$" title="Bitte gib Deinen Namen ein mit dem Dich der COOP3000 anreden darf. Keine Sonderzeichen. Nur Buchstaben und Zahlen." required>
												  <div class="help-block with-errors"></div>
											</div>
										  	
										  	<div class="form-group">
										  		<label for="email">Mail</label>
										    	<input type="email" class="form-control" name="email" id="email" placeholder="Für gelegentliche Concern-Berichte" data-error="Deine richtige E-Mail Adresse wäre hier nicht schlecht. z.B.: mustermann@web.de" required>
												  <div class="help-block with-errors"></div>
											  </div>
										  	
										  	<div class="form-group">
										  		<label for="mobile">Mobilnummer</label>
										    	<input type="text" class="form-control" name="mobile" id="mobile" placeholder="Für spezielle Insider-Infos ... z.B.: +490123456789" data-error="Deine echte Mobilfunknummer wäre hier super. z.B.: +490123456789">
												  <div class="help-block with-errors"></div>
											  </div>
										  	
										  	<div class="form-group">
										  		<label for="town">Ort</label>
										    	<input type="text" class="form-control" name="town" id="town" placeholder="Wo lebst Du? COOP3000 wird wachsen…" pattern="^[_A-z0-9]{1,}$" maxlength="30">
												  <div class="help-block with-errors"></div>
											  </div>
											<input type="hidden" name="name" value="">
											<button class="buttonHover" onclick="FillName(this.form)">Anmelden</button>
										</form>
									</div>							
								</div>
							</div>
						</div>
					</div>
